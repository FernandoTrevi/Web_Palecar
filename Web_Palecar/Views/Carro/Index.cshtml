@model IEnumerable<Producto>
@using Palecar_Utilidades
@if(Model.Count()> 0)
{
    <form method="post">
        <br />
        <div class="backgroundWhiteBorder">
            <div class="container row">
                <div class="col -8">
                    <div class="card mt-4">
                        <div class="card-header bg-dark text-light ml-0 row container">
                            <div class="col-6">
                                <i class="fa fa-shopping-cart"></i> &nbsp;
                                Carro de Compras
                            </div>
                            <div class="col-6 text-end">
                                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">Continuar Comprando</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class=" d-none d-lg-block">
                                <div class="row" style="color:#821f3d">
                                    <div class="col-lg-2">
                                    </div>
                                    <div class="col-12 col-lg-3">
                                        Producto
                                    </div>
                                    <div class="col-12 col-lg-2">
                                        Precio/kg
                                    </div>
                                    <div class="col-12 col-lg-2">
                                        Cantidad
                                    </div>
                                    
                                    <div class="col-12 col-lg-2">
                                        Subtotal
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-1">
                                    </div>
                                </div>
                            </div>

                            <hr />
                            @foreach (var obj in Model)
                            {
                                <div class="row h-100">
                                    <div class="col-4 col-md-2 text-center py-2">
                                        <img src="@WC.ImagenRuta@obj.UrlImagen" class="rounded" height="80px" width="100px" />
                                    </div>
                                    <div class="col-8 col-lg-3 pt-lg-4">
                                        <h5 style="color: blue;">@obj.NombreProducto</h5>

                                    </div>
                                    <div class="col-8 col-lg-2 pt-lg-4">
                                        <span style="font-size:17px; color:black">@obj.Precio</span>
                                    </div>
                                    <div class="col-8 col-lg-2 pt-lg-4">
                                        <input type="text" asp-for="@obj.TempCantidad" class="form-control"/>
                                    </div>
                                   
                                    <div class="col-8 col-lg-2 pt-lg-4">
                                        <span style="font-size:17px;color:black">@(obj.TempCantidad * obj.Precio)</span>
                                    </div>
                                    <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                        <a asp-action="Remover" asp-route-Id="@obj.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                         

                            <hr />
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-6 col-md-3 offset-md-9">
                                    <button type="submit" class="btn btn-success form-control ">
                                        <span>Continuar</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

}
else
{
    <div class="card-header bg-dark text-light ml-0 row container">
        <div class="col-6">
            <i class="fa fa-shopping-cart"></i> &nbsp;
            Carro de Compras
        </div>
        <div class="col-6 text-end">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">Continuar Comprando</a>
        </div>
        <h4>Por favor, agregue productos al carro....</h4>
    </div>
}

