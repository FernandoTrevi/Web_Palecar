@model Web_Palecar.Models.TipoAplicacion
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Eliminar">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-danger pl-3">Está seguro que desea eliminar el tipo de aplicación?</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label">Tipo de aplicación</label>
                    <input asp-for="Nombre" disabled class="form-control">
                </div>
            </div>


            <br />
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-controller="TipoAplicacion" asp-action="index" class="btn btn-success">Regresar</a>
            </div>

        </div>

    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


